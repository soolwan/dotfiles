set t_Co=256
set background=light
color github
" Fix github theme comment colors.
hi Comment guifg=#AAAAAA ctermfg=248  gui=ITALIC cterm=NONE

let g:ctrlp_working_path_mode = 0

" Use four spaces for c code.
if has("autocmd")
  au FileType c setlocal softtabstop=4 tabstop=4 shiftwidth=4
  au FileType objc setlocal softtabstop=4 tabstop=4 shiftwidth=4
end

if janus#is_plugin_enabled('syntastic')
  let g:syntastic_html_checker="w3"
endif
